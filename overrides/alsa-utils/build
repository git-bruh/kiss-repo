#!/bin/sh -e

# Fix a missing include
sed -i '/<syslog.h>/a #include <limits.h>' alsactl/utils.c

./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --with-udev-rules-dir=/usr/lib/udev/rules.d \
    --disable-alsaconf \
    --disable-alsamixer \
    --disable-bat \
    --disable-xmlto \
    --disable-nls

make
make DESTDIR="$1" install
