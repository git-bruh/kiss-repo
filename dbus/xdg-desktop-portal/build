#!/bin/sh -e

export DESTDIR="$1"

patch -p1 < no-fuse.patch

meson \
    --prefix=/usr \
    --libexecdir=/usr/lib \
    -Dlibportal=disabled \
    -Dgeoclue=disabled \
    -Dsystemd=disabled \
    -Dpytest=disabled \
    . output

ninja -C output
ninja -C output install

rm -rf "$1/usr/lib/systemd"
